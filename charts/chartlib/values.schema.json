{
  "$schema": "https://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "clusterDomain": {
      "type": "string"
    },
    "commonAnnotations": {
      "type": "object"
    },
    "commonLabels": {
      "type": "object"
    },
    "diagnosticMode": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "debug": {
      "type": "boolean"
    },
    "exposureType": {
      "type": "string",
      "enum": [
        "ingress",
        "proxy"
      ]
    },
    "externalURL": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "global": {
      "type": "object",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "imageRegistry": {
          "type": "string"
        },
        "kubeVersion": {
          "type": "string"
        },
        "storageClass": {
          "type": "string"
        }
      }
    },
    "imagePullSecrets": {
      "type": "array"
    },
    "ingress": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "className": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "tls": {
          "type": "array",
          "item": "string"
        }
      }
    },
    "kubeVersion": {
      "type": "string"
    },
    "nameOverride": {
      "type": "string"
    },
    "persistence": {
      "type": "object",
      "properties": {
        "accessModes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "ReadWriteOnce",
              "ReadOnlyMany",
              "ReadWriteMany"
            ]
          }
        },
        "enabled": {
          "type": "boolean"
        },
        "persistentVolumeClaim": {
          "type": "object"
        },
        "resourcePolicy": {
          "type": "string",
          "enum": [
            "keep",
            "delete"
          ]
        }
      }
    },
    "podAnnotations": {
      "type": "object"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "replicaCount": {
      "type": "integer"
    },
    "securityContext": {
      "type": "object"
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "exposureType"
  ],
  "$defs": {
    "ingress": {
      "type": "string",
      "properties": {
        "className": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        },
        "hosts": {
          "type": "array",
          "item": {
            "type": "object",
            "properties": {
              "host" : {
                "type": "string"
              },
              "paths": {
                "type": "array"
              }
            }
          }
        },
        "tls": {
          "type": "array",
          "item": {
            "type": "string"
          }
        }
      }
    }
  }
}